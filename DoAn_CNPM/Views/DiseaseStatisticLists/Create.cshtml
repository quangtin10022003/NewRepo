@model DoAn_CNPM.Models.DiseaseStatisticList

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div style=" width: 100%; ">
    <h2 style="text-align: center">TẠO MỚI CHẨN ĐOÁN BỆNH</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="control-label col-md-2">
                Chẩn đoán
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Dianose, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Dianose, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                Chi tiết đơn khám
            </div>
            <div class="col-md-10">
                @Html.DropDownList("IdDetailForm", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdDetailForm, "", new { @class = "text-danger" })
            </div>
        </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Tạo mới" class="btn btn-success" />
                </div>
            </div>
        </div>
    }

<div>
    @Html.ActionLink("Trở về", "Index")
</div>
</div>