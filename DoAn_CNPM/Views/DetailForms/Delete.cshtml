@model DoAn_CNPM.Models.DetailForm

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style=" width: 50%; ">
    <h2 style="text-align: center;padding-top:16px">XÓA ĐƠN KHÁM CHI TIẾT</h2>
    <div>
       
        <hr />
        <dl class="row">
            <dt class=" col-sm-4">
                Id Đơn khám
            </dt>

            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Form.IdForm)
            </dd>

            <br />

            <dt class=" col-sm-4">
                Tên Bảng giá khám
            </dt>

            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.PriceList.NamePriceList)
            </dd>

            <br />

            <dt class=" col-sm-4">
                Số lượng
            </dt>

            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Quantity)
            </dd>

            <br />

            <dt class=" col-sm-4">
                Đơn giá
            </dt>

            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.PriceList.Price)
            </dd>

            <dd class="col-12" style="text-align:center">
                <br />
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <input type="submit" value="Xóa" class="btn btn-danger"  />
                }
            </dd>
        </dl>

        <div>
            @Html.ActionLink("Trở về", "Index")
        </div>
    </div>
</div>