<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/menu.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/fontawesome-free-6.2.1-web/css/fontawesome.css" rel="stylesheet">
    <link href="~/Content/fontawesome-free-6.2.1-web/css/brands.css" rel="stylesheet">
    <link href="~/Content/fontawesome-free-6.2.1-web/css/solid.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <nav class="navbar navbar-expand-sm container-fluid" style="background-color: #00a713">
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                @if(Session["admin"] != null) { 
                <a style="color:yellow;font-size:24px" class="navbar-brand" href="~/Home"><i class="fa-solid fa-house-chimney-medical"></i> <b>Group 6 Clinic</b></a>
                <ul class="navbar-nav" style="list-style-type:none;padding-left:30px">
                    <li class="nav-item">  <a style="color: white; padding-top: 10px; font-size: 18px; padding-left:16px" class="nav-link" href="~/Home"><b>TRANG CHỦ</b></a></li>
                    <li class="nav-item"> <a style="color: white; padding-top: 10px; font-size: 18px; padding-left:16px" class="nav-link" href="~/Categories/Index"><b>PHÂN LOẠI BỆNH</b></a></li>
                    <li class="nav-item"> <a style="color: white; padding-top: 10px; font-size: 18px; padding-left:16px" class="nav-link" href="~/DiseaseStatisticLists/Index"><b>CHẨN ĐOÁN BỆNH</b></a></li>
                    <li class="nav-item"> <a style="color: white; padding-top: 10px; font-size: 18px; padding-left:16px" class="nav-link" href="~/Staffs/Index"><b>NHÂN VIÊN</b></a></li>
                    <li class="nav-item"> <a style="color: white; padding-top: 10px; font-size: 18px; padding-left:16px" class="nav-link" href="~/Doctors/Index"><b>BÁC SĨ</b></a></li>
                    <li class="nav-item"> <a style="color: white; padding-top: 10px; font-size: 18px; padding-left:16px" class="nav-link" href="~/Customers/Index"><b>KHÁCH HÀNG</b></a></li>
                    <li class="nav-item"> <a style="color: white; padding-top: 10px; font-size: 18px; padding-left:16px" class="nav-link" href="~/PriceLists/Index"><b>BẢNG GIÁ KHÁM</b></a></li>
                    <li class="nav-item"> <a style="color: white; padding-top: 10px; font-size: 18px; padding-left:16px" class="nav-link" href="~/Forms/Index"><b>ĐƠN KHÁM</b></a></li>
                    <li class="nav-item"> <a style="color: white; padding-top: 10px; font-size: 18px; padding-left:16px" class="nav-link" href="~/DetailForms/Index"><b>CHI TIẾT ĐƠN KHÁM</b></a></li>
                    <li class="format-hello">
                        @if (Session["name"] == null) {<span> Hello</span> }
                         else  { <span> <text> Hello </text> @Session["name"]</span>}                       
                    </li>
                    <li class="format-hello">
                        <a href="~/LoginUser/Logout" class="btn btn-warning">Đăng xuất</a>
                    </li>
                </ul>
                }
            </div>
        </div>
      
    </nav>
    

    <div class="container-fluid body-content">
        <div class="row">
            <div class="col-md-12" id="div-content" style="min-height:800px">
                @RenderBody()
            </div>
        </div>
        @*@Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)*@
    </div>


    <div style="background-color:darkseagreen; height: 100px; text-align: center; padding: 10px;">
        <h4 style="color:green;">
            <b>
                &copy; @DateTime.Now.Year - CONSULTING ROOM APP
            </b>
        </h4>
    </div>
</body>
</html>

<style>
    li.format-hello{
        padding-left:16px;
        padding-top:10px;
        color:white;
    }
</style>