@model DoAn_CNPM.Models.Doctor

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style=" width: 100%; ">
    <h2 style="text-align: center">SỬA THÔNG TIN BÁC SĨ</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IdDoctor)

        <div class="form-group">
            <div class="control-label col-md-2">
                Họ tên Bác sĩ
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NameDoctor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NameDoctor, "", new { @class = "text-danger" })
            </div>
        </div>

            <div class="form-group">
                <div class="control-label col-md-2">
                    Số điện thoại
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PhoneDoctor, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PhoneDoctor, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-warning" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Trở về", "Index")
    </div>
</div>
